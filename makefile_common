# Vundle
VUNDLE = $(HOME)/.vim/bundle/vundle
VUNDLE_REP = https://github.com/gmarik/vundle.git

# DOT FILES
DOTFILE_NAMES := $(wildcard dotfiles/home/.*)
DOTFILE_NAMES := $(filter-out . .. %.swp, $(DOTFILE_NAMES:dotfiles/home/%=%))
DOTFILES := $(DOTFILE_NAMES:%=$(HOME)/%)

# NPM
NPM_MODULES := jshint
NPM_MODULES := $(MODULES:%=$(P)/%)

NPM_MODULES_CLI := grunt
NPM_MODULES_CLI := $(NPM_MODULES_CLI:%=$(P)/%)

#PIP
PYTHON_PACKAGES := ipython
PYTHON_PACKAGES := $(PYTHON_PACKAGES:%=$(P)/%)
#

all: $(VUNDLE) $(DOTFILES) $(NPM_MODULES) $(NPM_MODULES_CLI) $(PYTHON_PACKAGES)

$(VUNDLE):
	mkdir -p $(VUNDLE)
	git clone $VUNDLE_REP $VUNDLE
	echo "Don't forget to run BundleInstall!"

$(DOTFILES): $(HOME)/%:
	ln -s $(PWD)/dotfiles/$* $(HOME)/$*

$(NPM_MODULES): $(P)/%: $(P)/npm
	npm install -g  $*

$(NPM_MODULES_CLI): $(P)/%: $(P)/npm
	npm install -g  $*-cli

$(PYTHON_PACKAGES): $(P)/%: $(P)/pip
	pip install $*

$(P)/pip: $(P)/python
